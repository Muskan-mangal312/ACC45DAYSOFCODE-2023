#include <iostream>

int main() {
    int X, Y;
    std::cin >> X >> Y; // Read inputs X and Y

    // Calculate time spent watching first Y minutes at twice the speed
    int firstPartTime = Y / 2;

    // Calculate time spent watching remaining portion of the movie
    int remainingTime = X - Y;

    // Calculate total time spent watching the entire movie
    int totalTime = firstPartTime + remainingTime;

    std::cout << totalTime << std::endl; // Output the result
    return 0;
}
