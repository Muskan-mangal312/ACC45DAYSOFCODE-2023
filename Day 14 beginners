#include <iostream>
using namespace std;

int main() {
    int T;
    cin >> T; // Number of test cases

    while (T--) {
        int N, M;
        cin >> N >> M; // Number of candies and number of friends

        // Check if N is even and divisible by M
        if (N % 2 == 0 && N % M == 0) {
            cout << "Yes" << endl; // Chef can distribute candies as per conditions
        } else {
            cout << "No" << endl; // Chef cannot distribute candies as per conditions
        }
    }

    return 0;
}
